generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id            String    @id @default(uuid())
  email         String    @unique
  createdAt     DateTime  @default(now())
  isActive      Boolean   @default(true)
  role          Role
  password_hash String
  sessions      Session[]
}

model ObserverProfile {
  id                 String              @id @default(uuid())
  firstName          String?
  lastName           String?
  age                Int?
  expertiseType      ExpertiseType
  specialty          RadiologySpecialty?
  experienceYears    Int?
  consentAccepted    Boolean             @default(false)
  createdAt          DateTime            @default(now())
  fatigueLevel       FatigueLevel        @default(LOW)
  otherExpertiseText String?
  visionCorrection   VisionCorrection    @default(NONE)
  visionOtherText    String?
  visionStatus       VisionStatus        @default(NORMAL)
  sessions           Session[]
}

model Protocol {
  id             String    @id @default(uuid())
  name           String
  studyType      StudyType
  mode           EvalMode
  parametersJson Json?
  createdAt      DateTime  @default(now())
  studies        Study[]
}

model Study {
  id            String            @id @default(uuid())
  name          String
  studyType     StudyType
  status        String            @default("DRAFT")
  createdAt     DateTime          @default(now())
  protocolId    String
  pairwiseTasks PairwiseTask[]
  sessions      Session[]
  protocol      Protocol          @relation(fields: [protocolId], references: [id])
  studyImages   StudyImage[]
  invitations   StudyInvitation[]
}

model StudyInvitation {
  id        String    @id @default(uuid())
  token     String    @unique
  studyId   String
  expiresAt DateTime?
  maxUses   Int?
  usedCount Int       @default(0)
  createdAt DateTime  @default(now())
  sessions  Session[]
  study     Study     @relation(fields: [studyId], references: [id], onDelete: Cascade)
}

model Session {
  id                  String               @id @default(uuid())
  status              SessionStatus        @default(IN_PROGRESS)
  startedAt           DateTime             @default(now())
  endedAt             DateTime?
  displayProfileJson  Json?
  studyId             String
  userId              String?
  invitationId        String?
  observerId          String?
  pairwiseEvaluations PairwiseEvaluation[]
  invitation          StudyInvitation?     @relation(fields: [invitationId], references: [id])
  observer            ObserverProfile?     @relation(fields: [observerId], references: [id], onDelete: Cascade)
  study               Study                @relation(fields: [studyId], references: [id], onDelete: Cascade)
  user                User?                @relation(fields: [userId], references: [id])
  visionTests         VisionTestResult[]
}

model VisionTestResult {
  id            String   @id @default(uuid())
  ishiharaScore Int
  ishiharaTotal Int
  contrastScore Float
  status        PassFail
  testedAt      DateTime @default(now())
  details       Json?
  sessionId     String
  session       Session  @relation(fields: [sessionId], references: [id], onDelete: Cascade)

  @@index([sessionId, testedAt])
}

model ImageAsset {
  id                String         @id @default(uuid())
  createdAt         DateTime       @default(now())
  format            ImageFormat
  label             String?
  metadataJson      Json?
  uri               String
  seriesInstanceUID String?
  sopInstanceUID    String?
  studyInstanceUID  String?
  asLeftInTasks     PairwiseTask[] @relation("LeftImage")
  asRightInTasks    PairwiseTask[] @relation("RightImage")
  studyImages       StudyImage[]
}

model StudyImage {
  id      String     @id @default(uuid())
  studyId String
  imageId String
  addedAt DateTime   @default(now())
  image   ImageAsset @relation(fields: [imageId], references: [id], onDelete: Cascade)
  study   Study      @relation(fields: [studyId], references: [id], onDelete: Cascade)

  @@unique([studyId, imageId])
  @@index([studyId])
  @@index([imageId])
}

model PairwiseTask {
  id           String               @id @default(uuid())
  studyId      String
  leftImageId  String
  rightImageId String
  randomSeed   String?
  createdAt    DateTime             @default(now())
  evaluations  PairwiseEvaluation[]
  leftImage    ImageAsset           @relation("LeftImage", fields: [leftImageId], references: [id])
  rightImage   ImageAsset           @relation("RightImage", fields: [rightImageId], references: [id])
  study        Study                @relation(fields: [studyId], references: [id], onDelete: Cascade)
}

model PairwiseEvaluation {
  id             String       @id @default(uuid())
  sessionId      String
  taskId         String
  choice         PairChoice
  responseTimeMs Int?
  createdAt      DateTime     @default(now())
  session        Session      @relation(fields: [sessionId], references: [id], onDelete: Cascade)
  task           PairwiseTask @relation(fields: [taskId], references: [id], onDelete: Cascade)

  @@index([sessionId, createdAt])
  @@index([taskId, createdAt])
}

enum Role {
  ADMIN
  OBSERVER
}

enum PassFail {
  PASS
  FAIL
}

enum StudyType {
  QUALITY
  DETECTABILITY
}

enum EvalMode {
  PAIRWISE
  RATING
}

enum SessionStatus {
  IN_PROGRESS
  COMPLETED
  ABORTED
}

enum PairChoice {
  LEFT_BETTER
  RIGHT_BETTER
  EQUAL
}

enum ExpertiseType {
  RADIOLOGY
  MEDICAL_IMAGING @map("IMAGE_QUALITY")
  OTHER
}

enum RadiologySpecialty {
  CHEST
  ABDOMINAL
  MSK
  EMERGENCY
  ONCOLOGY
  PEDIATRIC
  NEURORADIOLOGY
  OTHER
}

enum ImageFormat {
  DICOM
  IMA
  NIFTI_GZ
  PNG
  JPEG
  OTHER
}

enum VisionStatus {
  NORMAL
  COLOR_VISION_DEFICIENCY
  OTHER
}

enum VisionCorrection {
  NONE
  GLASSES
  CONTACT_LENSES
  OTHER
}

enum FatigueLevel {
  LOW
  MEDIUM
  HIGH
}
