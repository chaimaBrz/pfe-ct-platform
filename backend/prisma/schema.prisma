datasource db {
  provider = "postgresql"
}

generator client {
  provider = "prisma-client"
}

model User {
  id        String  @id @default(uuid())
  email     String  @unique
  password  String
  role      Role
  isActive  Boolean @default(true)
  createdAt DateTime @default(now())
}

enum Role {
  ADMIN
  OBSERVER
}
